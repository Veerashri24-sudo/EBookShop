@model BookApp.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h1></h1>
<h4>Orders</h4>
<head>
<style>
  body{
        background-image:url('https://www.teahub.io/photos/full/190-1905135_background-images-of-books.png');
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-size:cover;
   
    }
</style>
</head>
<hr />
 <dl class="row">
          
        <dt>
            Product Image
        </dt>
        <dd>
           <img src="~/images/@Model.ImageUrl" height="150" width="100" />
            <br />@Model.ImageUrl

        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book_Name)

        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
           <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
         <dt class = "col-sm-2">
           In Stock
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
            </dd>
      
    </dl>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="bookId" value=@Model.Id />
            <input type="hidden" name="bookName" asp-for="Book_Name"/>
             <input type="hidden" name="Author" asp-for="Author"/>
            <input type="hidden" name="ImageUrl" asp-for="ImageUrl" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" min="1" width="15%"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" name="price" asp-for="Price" />
           
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Books" asp-action="catalogue">Back to Catalogue</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
